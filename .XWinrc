# Menu for the XWin tray icon
MENU devbox {
  urxvt EXEC "tcp-command 192.168.56.50 urxvtc -title rxvt-unicode -sl 10000 -sb -sr"	
  gvim EXEC "tcp-command 192.168.56.50 gvim"
  emacs EXEC "tcp-command 192.168.56.50 emacs"
  lxtask EXEC "tcp-command 192.168.56.50 lxtask"
  lxappearance EXEC "tcp-command 192.168.56.50 lxappearance"
  tmux EXEC "tcp-command 192.168.56.50 urxvtc -title tmux -e sh -c \\'tmux attach || tmux new\\'"
  tmux-ssh EXEC "tcp-command 192.168.56.50 urxvtc -title tmux -e tsh"
  firefox EXEC "tcp-command 192.168.56.50 firefox"
  chromium EXEC "tcp-command 192.168.56.50 chromium"
  SEPARATOR
  "Show session log" EXEC "tcp-command 192.168.56.50 urxvtc -title 'debox session log' -sl 10000 -sb -sr -e tail -n 10000 -f ~/.devbox-session.log"
}

MENU cygwin {
  urxvt EXEC "tcp-command 127.0.0.1 urxvtc -fn 'xft:Consolas:pixelsize=21' -title rxvt-unicode -sl 10000 -sb -sr"
  gvim EXEC "tcp-command 127.0.0.1 gvim"
  SEPARATOR
  "Show session log" EXEC "tcp-command 127.0.0.1 urxvtc -fn 'xft:Consolas:pixelsize=21' -title 'cygwin session log' -sl 10000 -sb -sr -e tail -n 10000 -f ~/.cygwin-session.log"
}

MENU root {
  devbox MENU devbox
  cygwin MENU cygwin
  SEPARATOR
  "Edit .XWinrc" EXEC "tcp-command 127.0.0.1 gvim ~/.dotfiles/.XWinrc"
  "Edit .cygwin-session.zsh" EXEC "tcp-command 127.0.0.1 gvim ~/.dotfiles/cygwin-resources/cygwin-session.zsh"
  "Reload .XWinrc" RELOAD
}

ROOTMENU root

ICONDIRECTORY D:\cygwin\home\tarruda\.dotfiles\cygwin-resources\icons

ICONS {
  gvim vim.ico
  tmux terminal.ico
  "Task Manager" system-monitor.ico
  rxvt-unicode rxvt.ico
  lxappearance lxappearance.ico
}

STYLES {
  # Firefox MAXIMIZE
  tmux MAXIMIZE
  # Chromium MAXIMIZE
  emacs MAXIMIZE
}
