# Menu for the XWin tray icon
MENU dbox {
  urxvt EXEC "tcp-command urxvt -title rxvt-unicode"	
  gvim EXEC "tcp-command gvim"
  emacs EXEC "tcp-command emacs"
  lxtask EXEC "tcp-command lxtask"
  tmux EXEC "tcp-command urxvt -title tmux -e sh -c tmux attach || tmux new"
}

MENU cygwin {
  urxvt EXEC "echo 'urxvt -title rxvt-unicode -sl 10000 -sb -sr -e /bin/zsh' | nc 127.0.0.1 55555"
  gvim EXEC "echo gvim | nc 127.0.0.1 55555"
}

MENU root {
  dbox MENU dbox
  cygwin MENU cygwin	
  SEPARATOR
  "Edit .XWinrc" EXEC "zsh -c 'cd; gvim .XWinrc'"
  "Edit .cygwin-session.zsh" EXEC "zsh -c 'cd; gvim .dotfiles/cygwin-resources/cygwin-session.zsh'"
  SEPARATOR
  "Reload .XWinrc" RELOAD
}

ROOTMENU root

ICONDIRECTORY T:\cygwin\home\tarruda\.dotfiles\cygwin-resources\icons

ICONS {
  tmux terminal.ico
  "Task Manager" system-monitor.ico
  rxvt-unicode rxvt.ico
}

STYLES {
  tmux MAXIMIZE
  Chromium MAXIMIZE
  emacs MAXIMIZE
}
