# Menu for the XWin tray icon
MENU dbox {
  urxvt EXEC "tcp-command 192.168.56.50 urxvt -title rxvt-unicode"	
  gvim EXEC "tcp-command 192.168.56.50 gvim"
  emacs EXEC "tcp-command 192.168.56.50 emacs"
  lxtask EXEC "tcp-command 192.168.56.50 lxtask"
  tmux EXEC "tcp-command 192.168.56.50 urxvt -title tmux -e sh -c \'tmux attach \|\| tmux new\'"
}

MENU cygwin {
  urxvt EXEC "tcp-command 127.0.0.1 urxvt -title rxvt-unicode -sl 10000 -sb -sr -e /bin/zsh"
  gvim EXEC "tcp-command 127.0.0.1 gvim"
}

MENU root {
  dbox MENU dbox
  cygwin MENU cygwin	
  SEPARATOR
  "Edit .XWinrc" EXEC "zsh -c 'cd; gvim .XWinrc'"
  "Edit .cygwin-session.zsh" EXEC "zsh -c 'cd; gvim .dotfiles/cygwin-resources/cygwin-session.zsh'"
  SEPARATOR
  "Reload .XWinrc" RELOAD
}

ROOTMENU root

ICONDIRECTORY T:\cygwin\home\tarruda\.dotfiles\cygwin-resources\icons

ICONS {
  tmux terminal.ico
  "Task Manager" system-monitor.ico
  rxvt-unicode rxvt.ico
}

STYLES {
  tmux MAXIMIZE
  Chromium MAXIMIZE
  emacs MAXIMIZE
}
