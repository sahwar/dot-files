snippet forn "Iterate over range" !b
for ${5:i} = ${1:1}, ${2:10}, ${3:1}
  ${4:print $5}
endsnippet


snippet fork "Iterate over table pairs" !b
for ${3:k}, ${4:v} in pairs ${1:table}
  ${2:print $3, $4}
endsnippet


snippet while "While loop" !b
while ${1:false}
  $2
endsnippet


snippet if "If/Else" !b
if ${1:true}
  $2
else${3}
endsnippet

