let mapleader = ","

" clear search
nnoremap <leader>c :noh<cr>

ignorekeys add -except=\:,;,<ESC>,<CR>,<C-i>,<C-n>,<C-p>,<C-f>,<C-b>,<C-d>,<C-u>,o,t,b mail\.google\.com

" go to gmail
nnoremap gm :buffer https://mail.google.com<tab>

set gui=addons,nobookmarks,nomenu,nonavigation,tabs
colorscheme indigo

nnoremap <leader>f :firebug toggle<cr>
