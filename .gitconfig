[user]
  name = Thiago de Arruda
  email = tpadilha84@gmail.com

[github]
  user = tarruda

[core]
  excludesfile = ~/.global.gitignore

[color]
  ui = true
  diff = false
  log = false

[url "https://github.com/"]
  insteadOf = "gh:"

[url "git@bitbucket.org:"]
  insteadOf = "bb:"

[url "git@github.com:"]
  pushInsteadOf = "gh:"

[url "https://github.com/tarruda/"]
  insteadOf = "ta:"

[url "git@github.com:tarruda/"]
  pushInsteadOf = "ta:"

[url "https://github.com/neovim/"]
  insteadOf = "nv:"

[url "git@github.com:neovim/"]
  pushInsteadOf = "nv:"

[url "https://gist.github.com/"]
  insteadOf = "gist:"

[url "git@gist.github.com:"]
  pushInsteadOf = "gist:"

[push]
  default = upstream

[imap] 
  folder = "[Gmail]/Drafts" 
  host = imaps://imap.gmail.com 
  user = tpadilha84@gmail.com
  port = 993 
  sslverify = true 

[diff]
  tool = vim -d

[merge]
  tool = vim -d

[difftool]
  prompt = true

[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=20
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = stash --keep-index
  sp = stash pop
