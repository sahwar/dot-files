[user]
  name = Thiago de Arruda
  email = tpadilha84@gmail.com

[github]
  user = tarruda

[core]
  excludesfile = ~/.global.gitignore
  pager = vim -X -R --cmd 'let g:disable_addons = 1' -c 'set nomod nolist nomodifiable' -c 'set nonumber norelativenumber' -c 'map q :q<cr>' -c 'map <space> <c-d>' -c 'map b <c-u>' -

[color]
  ui = true
  diff = false
  log = false

[url "https://github.com/"]
  insteadOf = "gh:"

[url "git@bitbucket.org:"]
  insteadOf = "bb:"

[url "git@github.com:"]
  pushInsteadOf = "gh:"

[url "https://github.com/tarruda/"]
  insteadOf = "ta:"

[url "git@github.com:tarruda/"]
  pushInsteadOf = "ta:"

[url "https://gist.github.com/"]
  insteadOf = "gist:"

[url "git@gist.github.com:"]
  pushInsteadOf = "gist:"

[push]
  default = upstream

[imap] 
  folder = "[Gmail]/Drafts" 
  host = imaps://imap.gmail.com 
  user = tpadilha84@gmail.com
  port = 993 
  sslverify = true 

[diff]
  tool = vimdiff

[merge]
  tool = vimdiff

[difftool]
  prompt = true
