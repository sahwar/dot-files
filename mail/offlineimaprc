# based on the article at: http://stevelosh.com/blog/2012/10/the-homely-mutt/
[general]
ui = ttyui
accounts = tpadilha84
pythonfile = ~/.offlineimap.py
fsync = False
metadata = /media/mail/.offlineimap

[Account tpadilha84]
localrepository = tpadilha84-local
remoterepository = tpadilha84-remote
status_backend = sqlite
postsynchook = offlineimap-post-sync

[Repository tpadilha84-local]
type = Maildir
localfolders = /media/mail/tpadilha84-gmail.com
# change default '.' separator so nested labels are stored in nested directories
sep = /
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'starred': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository tpadilha84-remote]
maxconnections = 1
type = Gmail
remoteuser = tpadilha84@gmail.com
remotepasseval = get_password('tpadilha84')
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'starred',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             ]
