let mapleader = ","

" clear search
nnoremap <leader>c :noh<cr>

ignorekeys add -except=\:,;,<ESC>,<CR>,<C-i>,<C-n>,<C-p>,<C-f>,<C-b>,<C-d>,<C-u>,o,t,b mail\.google\.com

" go to gmail
nnoremap gm :buffer https://mail.google.com<tab>

set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
colorscheme indigo

" TODO figure a way to test if gvim is available on PATH before doing this
set editor="D:/LiberKey/MyApps/CygwinPortable/bin/zsh.exe /usr/bin/vimperator-edit -wait"
